{% extends 'base.html.twig' %}

{% block title %}Colors - CitadelQuest Design{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .color-card {
        transition: transform 0.2s;
        cursor: pointer;
    }
    .color-card:hover {
        transform: translateY(-2px);
    }
    .color-info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }
    .copy-feedback {
        position: fixed;
        bottom: 20px;
        right: 20px;
        padding: 1rem;
        background: var(--success);
        color: white;
        border-radius: 6px;
        display: none;
        z-index: 1050;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div id="copyFeedback" class="copy-feedback">Copied to clipboard!</div>
    
    <div class="glass-panel p-4 mb-4">
        <h1 class="text-light">Color System</h1>
        <p class="text-secondary">Our color palette combines our signature green with a carefully crafted dark theme for optimal contrast and immersion.</p>
    </div>

    <div class="row g-4">
        {# CitadelQuest Colors #}
        <div class="col-12">
            <div class="glass-panel p-4 mb-4">
                <h2 class="text-light mb-4">CitadelQuest Colors</h2>
                <div class="row g-3">
                    {# Background Cyber Color #}
                    <div class="col-md-4">
                        <div class="color-card p-4 rounded" style="background: var(--cyber); color: var(--text-on-cyber);" 
                             data-color="#95ec86" data-class="bg-cyber" data-var="--cyber">
                            <h3 class="h5 mb-3">Cyber Background</h3>
                            <div class="color-info">
                                <code class="small">#95ec86</code>
                                <code class="small">.bg-cyber</code>
                                <code class="small">var(--cyber)</code>
                            </div>
                        </div>
                    </div>
                    
                    {# Text Cyber Color #}
                    <div class="col-md-4">
                        <div class="color-card p-4 rounded" style="background: var(--bs-dark); color: var(--cyber);" 
                             data-color="#95ec86" data-class="text-cyber" data-var="--cyber">
                            <h3 class="h5 mb-3">Cyber Text</h3>
                            <div class="color-info">
                                <code class="small">#95ec86</code>
                                <code class="small">.text-cyber</code>
                                <code class="small">var(--cyber)</code>
                            </div>
                        </div>
                </div>
            </div>
        </div>

        {# Bootstrap Colors #}
        <div class="col-12">
            <div class="glass-panel p-4">
                <h2 class="text-light mb-4">Bootstrap Colors</h2>
                <div class="row g-3">
                    {% set bootstrap_colors = {
                        'Primary': ['primary', '#0d6efd'],
                        'Secondary': ['secondary', '#6c757d'],
                        'Success': ['success', '#198754'],
                        'Info': ['info', '#0dcaf0'],
                        'Warning': ['warning', '#ffc107'],
                        'Danger': ['danger', '#dc3545'],
                        'Light': ['light', '#f8f9fa'],
                        'Dark': ['dark', '#212529']
                    } %}

                    {% for name, data in bootstrap_colors %}
                        <div class="col-md-3">
                            <div class="color-card p-4 rounded" 
                                 style="background: var(--{{ data[0] }}); {% if data[0] in ['light', 'warning'] %}color: #000;{% endif %}"
                                 data-color="{{ data[1] }}" data-class="{{ data[0] }}" data-var="--{{ data[0] }}">
                                <div class="color-info">
                                    <h4 class="mb-0">{{ name }}</h4>
                                    <code>{{ data[1] }}</code>
                                    <small>.text-{{ data[0] }}</small>
                                    <small>var(--{{ data[0] }})</small>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        {# Text Colors #}
        <div class="col-md-6">
            <div class="glass-panel p-4">
                <h2 class="text-light mb-4">Text Colors</h2>
                <div class="mb-3">
                    <p class="text-light mb-2">Light Text <code>#dee2e6</code></p>
                    <p class="text-secondary mb-2">Secondary Text <code>#8391a2</code></p>
                    <p style="color: #aab8c5" class="mb-2">Body Text <code>#aab8c5</code></p>
                </div>
            </div>
        </div>

        {# Background Colors #}
        <div class="col-md-6">
            <div class="glass-panel p-4">
                <h2 class="text-light mb-4">Background Colors</h2>
                <div class="p-2 rounded mb-2" style="background: #37404a">
                    <p class="text-light mb-0">Secondary Background <code>#37404a</code></p>
                </div>
                <div class="p-2 rounded" style="background: #404954">
                    <p class="text-light mb-0">Tertiary Background <code>#404954</code></p>
                </div>
            </div>
        </div>

        {# Glass Effects #}
        <div class="col-12">
            <div class="glass-panel p-4">
                <h2 class="text-light mb-4">Glass Effects</h2>
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="glass-panel p-4">
                            <h4 class="text-light">Default Panel</h4>
                            <p class="text-secondary mb-0">Base glass effect</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="glass-panel glass-panel-border p-4">
                            <h4 class="text-light">Bordered Panel</h4>
                            <p class="text-secondary mb-0">With green border</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="glass-panel glass-panel-glow p-4">
                            <h4 class="text-light">Glowing Panel</h4>
                            <p class="text-secondary mb-0">With hover glow</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{{ encore_entry_script_tags('visual-design') }}
{% endblock %}
