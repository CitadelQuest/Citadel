{% extends 'base.html.twig' %}

{% block title %}Background System - CitadelQuest Design{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="glass-panel p-4 mb-4">
        <h1 class="text-light">Background System</h1>
        <p class="mb-0">Our multi-layered background system combines custom artwork with dynamic SVG patterns and glassmorphism effects.</p>
    </div>

    <div class="row g-4">
        {# Base Background #}
        <div class="col-md-6">
            <div class="glass-panel p-4">
                <h2 class="text-light mb-4">Base Layer</h2>
                <div class="position-relative" style="height: 200px; overflow: hidden; border-radius: 10px;">
                    <img src="{{ asset('build/images/citadel_quest_bg.jpg') }}" alt="Base Background" 
                         style="width: 100%; height: 100%; object-fit: cover;">
                </div>
                <p class="mt-3 mb-0">The foundational image that sets the mood and atmosphere.</p>
            </div>
        </div>

        {# Cyber Pattern #}
        <div class="col-md-6">
            <div class="glass-panel p-4">
                <h2 class="text-light mb-4">Cyber Pattern Overlay</h2>
                <div class="position-relative" 
                    style="height: 200px; overflow: hidden; border-radius: 10px; background-image: url('{{ asset('build/images/bg-pattern.svg') }}'); background-blend-mode: overlay; background-color: rgba(var(--bs-dark-rgb), 0.6);">
                </div>
                <p class="mt-3 mb-0">SVG pattern overlay adding depth and cyberpunk aesthetic.</p>
            </div>
        </div>

        {# Glass Effect Showcase #}
        <div class="col-12">
            <div class="glass-panel p-4">
                <h2 class="text-light mb-4">Glassmorphism Effects</h2>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="glass-panel p-4">
                            <h4 class="text-light">Light Blur</h4>
                            <p class="mb-0">3px blur effect</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="glass-panel p-4" style="backdrop-filter: blur(10px);">
                            <h4 class="text-light">Medium Blur</h4>
                            <p class="mb-0">10px blur effect</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="glass-panel p-4" style="backdrop-filter: blur(20px);">
                            <h4 class="text-light">Heavy Blur</h4>
                            <p class="mb-0">20px blur effect</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Layer Composition #}
        <div class="col-12">
            <div class="glass-panel p-4">
                <h2 class="text-light mb-4">Layer Composition</h2>
                <div class="position-relative" 
                    style="height: 300px; overflow: hidden; border-radius: 10px; background-image: url('{{ asset('build/images/citadel_quest_bg.jpg') }}'); background-size: cover; background-position: center;">
                    <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center" 
                        style="background-image: url('{{ asset('build/images/bg-pattern.svg') }}'); background-blend-mode: overlay; background-color: rgba(var(--bs-dark-rgb), 0.6);">
                        <div class="glass-panel p-4 text-center" style="max-width: 400px;">
                            <h3 class="text-light mb-3">Complete Effect</h3>
                            <p class="mb-0">
                                The final result combines the base background, cyber pattern overlay,
                                and glass effect to create our signature immersive aesthetic.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
