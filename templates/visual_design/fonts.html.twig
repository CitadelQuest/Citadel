{% extends 'base.html.twig' %}

{% block title %}Typography - CitadelQuest Design{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="glass-panel p-4 mb-4">
        <h1 class="text-light">Typography</h1>
        <p class="text-secondary">Our typography system uses the Nunito font family, chosen for its perfect balance of readability and modern aesthetics.</p>
    </div>

    <div class="row g-4">
        {# Font Weights #}
        <div class="col-md-6">
            <div class="glass-panel p-4">
                <h2 class="text-light mb-4">Font Weights</h2>
                
                <div class="mb-4">
                    <p style="font-weight: 300" class="text-light mb-2">Light (300) - For subtle text</p>
                    <p style="font-weight: 400" class="text-light mb-2">Regular (400) - Main body text</p>
                    <p style="font-weight: 500" class="text-light mb-2">Medium (500) - Emphasis</p>
                    <p style="font-weight: 700" class="text-light">Bold (700) - Headers</p>
                </div>
            </div>
        </div>

        {# Font Sizes #}
        <div class="col-md-6">
            <div class="glass-panel p-4">
                <h2 class="text-light mb-4">Font Sizes</h2>
                
                <h1 class="text-light">H1 Heading</h1>
                <h2 class="text-light">H2 Heading</h2>
                <h3 class="text-light">H3 Heading</h3>
                <h4 class="text-light">H4 Heading</h4>
                <p class="text-light">Regular paragraph text</p>
                <small class="text-light">Small text for details</small>
            </div>
        </div>

        {# Special Text #}
        <div class="col-12">
            <div class="glass-panel p-4">
                <h2 class="text-light mb-4">Special Text Styles</h2>
                
                <div class="row">
                    <div class="col-md-6">
                        <p class="text-cyber mb-2">Code Green Text</p>
                        <p class="text-primary mb-2">Primary Text</p>
                        <p class="text-secondary mb-2">Secondary Text</p>
                    </div>
                    <div class="col-md-6">
                        <p class="text-emphasis mb-2">Emphasis Text</p>
                        <p class="text-light mb-2">Light Text</p>
                        <code class="text-cyber">Code Block Text</code>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
