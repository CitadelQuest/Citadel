{% extends 'base.html.twig' %}

{% block title %}Typography - CitadelQuest Design{% endblock %}

{% block body %}
<div class="container mt-4 mb-4">
    <div class="glass-panel p-4 mb-4">
        <h1>Typography</h1>
        <p>Our typography system uses the Nunito font family, chosen for its perfect balance of readability and modern aesthetics.</p>
    </div>

    <div class="row g-4">
        {# Font Weights #}
        <div class="col-md-6">
            <div class="glass-panel p-4">
                <h2 class="mb-4">Font Weights</h2>
                
                <div class="mb-4">
                    <p style="font-weight: 100" class="mb-2">Light (100) - For subtle text</p>
                    <p style="font-weight: 300" class="mb-2">Regular (300) - Main body text</p>
                    <p style="font-weight: 500" class="mb-2">Medium (500) - Emphasis</p>
                    <p style="font-weight: 700">Bold (700) - Headers</p>
                </div>
            </div>
        </div>

        {# Font Sizes #}
        <div class="col-md-6">
            <div class="glass-panel p-4">
                <h2 class="mb-4">Font Sizes</h2>
                
                <h1>H1 Heading</h1>
                <h2>H2 Heading</h2>
                <h3>H3 Heading</h3>
                <h4>H4 Heading</h4>
                <h5>H5 Heading</h5>
                <h6>H6 Heading</h6>
                <p>Regular paragraph text</p>
                <small>Small text for details</small>
            </div>
        </div>

        {# Special Text #}
        <div class="col-12">
            <div class="glass-panel p-4">
                <h2 class="mb-4">Special Text Styles</h2>
                
                <div class="row">
                    <div class="col-md-6">
                        <p class="text-cyber mb-2">Cyber Text</p>
                        <p class="text-primary mb-2">Primary Text</p>
                        <p class="text-secondary mb-2">Secondary Text</p>
                        <p class="text-emphasis mb-2">Emphasis Text</p>
                        <p class="text-success mb-2">Success Text</p>
                        <p class="text-warning mb-2">Warning Text</p>
                        <p class="text-info mb-2">Info Text</p>
                        <p class="text-danger mb-2">Danger Text</p>
                    </div>
                    <div class="col-md-6">
                        <a href="https://www.citadelquest.com">Link Text</a>
                        <p class="text-emphasis mb-2">Emphasis Text</p>
                        <p class="text-light mb-2">Light Text</p>
                        <p class="text-muted mb-2">Muted Text</p>
                        <p class="text-dark mb-2">Dark Text</p>
                        <p class="text-white mb-2">White Text</p>                        
                        <code class="text-cyber">Code Block Text</code>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
