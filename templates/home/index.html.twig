{% extends 'base.html.twig' %}

{% block title %}{{ 'app.welcome'|trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
<div class="container">
    <section class="hero">
        <h1>{{ 'app.welcome'|trans }}</h1>
        <p>{{ 'app.tagline'|trans }}</p>
        {% if not app.user %}
            <div class="d-flex justify-content-center gap-3">
                <a href="{{ path('app_register') }}" class="btn btn-primary btn-lg">{{ 'home.actions.create_citadel'|trans }}</a>
                <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-lg">{{ 'home.actions.login'|trans }}</a>
            </div>
        {% endif %}
    </section>

    <section class="features">
        <div class="row">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">🔒</div>
                    <h3>{{ 'home.features.data_control.title'|trans }}</h3>
                    <p>{{ 'home.features.data_control.description'|trans }}</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">🤖</div>
                    <h3>{{ 'home.features.ai_collab.title'|trans }}</h3>
                    <p>{{ 'home.features.ai_collab.description'|trans }}</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">🌐</div>
                    <h3>{{ 'home.features.decentralized.title'|trans }}</h3>
                    <p>{{ 'home.features.decentralized.description'|trans }}</p>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
