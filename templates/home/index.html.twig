{% extends 'base.html.twig' %}

{% block title %}Welcome to CitadelQuest{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .hero {
            padding: 4rem 0;
            text-align: center;
        }
        .hero h1 {
            font-size: 3.5rem;
            margin-bottom: 1.5rem;
            background: linear-gradient(45deg, #2196F3, #00BCD4);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .hero p {
            font-size: 1.2rem;
            color: rgba(255, 255, 255, 0.8);
            max-width: 800px;
            margin: 0 auto 2rem;
        }
        .features {
            padding: 4rem 0;
        }
        .feature-card {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
            backdrop-filter: blur(10px);
            transition: transform 0.3s;
        }
        .feature-card:hover {
            transform: translateY(-5px);
        }
        .feature-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container">
    <section class="hero">
        <h1>Welcome to CitadelQuest</h1>
        <p>
            Your personal secure space for AI-human collaboration. 
            Built with privacy at its core and your data sovereignty in mind.
        </p>
        {% if not app.user %}
            <div class="d-flex justify-content-center gap-3">
                <a href="{{ path('app_register') }}" class="btn btn-primary btn-lg">Create Your Citadel</a>
                <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-lg">Login</a>
            </div>
        {% endif %}
    </section>

    <section class="features">
        <div class="row">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">üîí</div>
                    <h3>Your Data, Your Control</h3>
                    <p>End-to-end encryption and personal database ensure your data stays yours.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">ü§ñ</div>
                    <h3>AI Collaboration</h3>
                    <p>Work with AI assistants while maintaining complete data sovereignty.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon">üåê</div>
                    <h3>Decentralized</h3>
                    <p>Self-hosted and independent. No external service dependencies.</p>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
